<?xml version="1.0"?>
<config>
  <modules>
    <Shopmyar_Twoctwop>
      <version>1.0.0.0</version>
    </Shopmyar_Twoctwop>
  </modules>
 
  <global>
    <fieldsets>
      <sales_convert_quote_payment>
        <custom_field_one>
          <to_order_payment>*</to_order_payment>
        </custom_field_one>
        <custom_field_two>
          <to_order_payment>*</to_order_payment>
        </custom_field_two>
      </sales_convert_quote_payment>
    </fieldsets>
     
    <helpers>
      <twoctwop>
        <class>Shopmyar_Twoctwop_Helper</class>
      </twoctwop>
    </helpers>
 
    <blocks>
      <twoctwop>
        <class>Shopmyar_Twoctwop_Block</class>
      </twoctwop>
    </blocks>
         
    <models>
      <twoctwop>
        <class>Shopmyar_Twoctwop_Model</class>
      </twoctwop>
    </models>
 
    <resources>
      <twoctwop_setup>
        <setup>
          <module>Shopmyar_Twoctwop</module>
        </setup>
      </twoctwop_setup>
    </resources>
  </global>
 
  <default>
    <payment>
      <twoctwop>
        <active>1</active>
        <model>twoctwop/paymentmethod</model>
        <order_status>pending</order_status>
        <title>2C2P Payment</title>
        <allowspecific>0</allowspecific>
        <payment_action>sale</payment_action>
      </twoctwop>
    </payment>
  </default>
   
  <frontend>
    <routers>
      <twoctwop>
        <use>standard</use>
        <args>
          <module>Shopmyar_Twoctwop</module>
          <frontName>twoctwop</frontName>
        </args>
      </twoctwop>
    </routers>
  </frontend>
</config>